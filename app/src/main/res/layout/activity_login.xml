<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/room"
    android:stretchColumns="1" >
           
	<TableRow android:layout_width="wrap_content"  android:background="@color/darkbrown" 
		android:layout_height="match_parent">

		<TextView
		    android:id="@+id/Tilte"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_span="3"
		    android:gravity="center_horizontal"
		    android:text="@string/app_name"
		    android:textSize="20sp" />

	</TableRow>

	<TableRow android:layout_height="40dp" >

		<TextView android:id="@+id/TextView00" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="center"
			android:gravity="end" android:padding="4dp" android:text="@string/selecthome" />

		<Spinner
		    android:id="@+id/cbTimeTasks"
		    android:layout_width="match_parent"
		    android:layout_height="30dp"
		    android:layout_margin="1dp"
		    android:background="@drawable/shape"
		    android:textSize="13sp" 
		    android:padding="0dp" />

	</TableRow>

	<TableRow android:layout_height="match_parent"  android:background="@color/darkbrown" >

	     <Button
	         android:id="@+id/btnaddHome"
	         android:layout_width="80dp"
	         android:layout_height="34dp"
	         android:layout_margin="1dp"
	         android:background="@drawable/button"
	         android:minHeight="40dp"
	         android:minWidth="80dp"
	         android:text="@string/addhome"
	         android:textSize="13sp"
	         android:width="80dp" />
	    			
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_span="2">

			<Button
			    android:id="@+id/btndeleteHome"
			    android:layout_width="80dp"
			    android:layout_height="34dp"
			    android:layout_margin="1dp"
			    android:background="@drawable/button"
			    android:minHeight="40dp"
			    android:text="@string/deletehome"
			    android:textSize="13sp" />

			<EditText
			    android:id="@+id/inputhome"
			    android:layout_width="match_parent"
			    android:layout_height="30dp"
			    android:layout_gravity="center_vertical"
			    android:layout_margin="2dp"
			    android:background="@drawable/shape"
			    android:hint=""
			    android:inputType="text"
			    android:padding="4dp"
			    android:singleLine="true"
			    android:textSize="14sp" />

		</LinearLayout>
	</TableRow>

	<TableRow >
		<TextView android:id="@+id/TextView01" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="end"
			android:padding="4dp" android:text="@string/account" />

		<EditText
		    android:id="@+id/inputaccount"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="2dp"
		    android:background="@drawable/shape"
		    android:hint="@string/yourname"
		    android:singleLine="true"
		    android:textColorHint="@color/darkbrown" />

	</TableRow>

	<TableRow>

		<TextView android:id="@+id/textView02" android:layout_height="wrap_content"
			android:gravity="end" android:padding="4dp" android:text="@string/password" />

		<EditText
		    android:id="@+id/inputpassword"
		    android:layout_height="wrap_content"
		    android:layout_margin="2dp"
		    android:background="@drawable/shape"
		    android:hint="@string/yourpass"
		    android:inputType="textPassword"
		    android:singleLine="true"
		    android:textColorHint="@color/darkbrown" />

	</TableRow>

	<TableRow android:background="@color/darkbrown" >

		<Button
		    android:id="@+id/btnLogLan"
		    android:layout_width="80dp"
		    android:layout_height="34dp"
		    android:layout_margin="1dp"
		    android:background="@drawable/button"
		    android:minHeight="44dp"
		    android:minWidth="80dp"
		    android:text="@string/loglan"
		    android:textSize="13sp"
		    android:width="80dp" />

		<Button
		    android:id="@+id/btnDemo"
		    android:layout_width="match_parent"
		    android:layout_height="34dp"
		    android:layout_margin="1dp"
		    android:background="@drawable/button"
		    android:minHeight="44dp"
		    android:minWidth="80dp"
		    android:text="@string/demo"
		    android:textColor="@color/gray"
		    android:textSize="13sp"
		    android:width="80dp" />

	</TableRow>

	<TableRow android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:background="@color/darkgreen">
		<TextView android:id="@+id/TextView03" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="end"
			android:padding="4dp" android:text="@string/lanip" />

		<EditText
		    android:id="@+id/ip1"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="2dp"
		    android:layout_span="2"
		    android:background="@drawable/shape"
		    android:hint="@string/ipdemo1"
		    android:singleLine="true" />

	</TableRow>
	<TableRow android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:background="@color/darkgreen">
		<TextView android:id="@+id/TextView04" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="end"
			android:padding="4dp" android:text="@string/port1" />

		<EditText
		    android:id="@+id/port1"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="2dp"
		    android:layout_span="2"
		    android:background="@drawable/shape"
		    android:hint="50001"
		    android:singleLine="true" />

	</TableRow>

	<TableRow
	    android:layout_height="wrap_content"
	    android:background="@color/darkbrown" >

		<Button
		    android:id="@+id/btnLogWlan"
		    android:layout_width="80dp"
		    android:layout_height="34dp"
		    android:layout_margin="1dp"
		    android:background="@drawable/button"
		    android:minHeight="40dp"
		    android:text="@string/loginternet"
		    android:textSize="13sp"
		    android:width="80dp" />

		<TextView
		    android:id="@+id/phoneame"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:padding="4dp"
		    android:textColor="@color/black_overlay" />

	</TableRow>

	<TableRow android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/TextView05" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="end"
			android:padding="4dp" android:text="@string/wanip" />

		<EditText
		    android:id="@+id/ip2"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="2dp"
		    android:layout_span="2"
		    android:background="@drawable/shape"
		    android:singleLine="true"
		    android:textSize="16sp" />

	</TableRow >
	<TableRow android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/TextView06" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="end"
			android:padding="4dp" android:text="@string/port2" />

		<EditText
		    android:id="@+id/port2"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="2dp"
		    android:layout_span="2"
		    android:background="@drawable/shape"
		    android:hint="24625"
		    android:singleLine="true" />

	</TableRow>

	<TableRow android:background="@color/darkbrown" >

		<Button
		    android:id="@+id/btnExit"
		    android:layout_width="80dp"
		    android:layout_height="34dp"
		    android:layout_margin="1dp"
		    android:background="@drawable/button"
		    android:minHeight="44dip"
		    android:minWidth="40dp"
		    android:text="@string/exitapp"
		    android:textSize="13sp"
		    android:width="72dp" />

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >

		<CheckBox
		    android:id="@+id/chkSavePassword"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/save"
		    android:textSize="13sp" />
		
				<CheckBox
				    android:id="@+id/chkShowDemo"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="@string/showdemo"
				    android:textSize="13sp" />

	     </LinearLayout>
	</TableRow>	
	
	<TableRow
	    android:layout_width="wrap_content"
	    android:layout_height="fill_parent"
	    android:background="@color/darkgreen" >

		<TextView
		    android:id="@+id/tvdownload"
		    android:layout_width="match_parent"
		    android:layout_height="fill_parent"
		    android:layout_gravity="center_horizontal"
		    android:layout_span="3"
		    android:gravity="left|center_horizontal"
		    android:singleLine="false"
		    android:text="@string/download"
		    android:textSize="14sp" />

	</TableRow>

</TableLayout>