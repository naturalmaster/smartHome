<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="wrap_content">
    		
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:orientation="horizontal">
		
		<TextView android:id="@+id/tvdevicetext" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:paddingLeft="4dp"
			android:text="@string/device" />
		
		<TextView
		    android:id="@+id/tvdevice"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingLeft="4dp"
		    android:text="910-0-1,SO,TEXT（delay 2)" />
			
			</LinearLayout>

		<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:orientation="horizontal">

		<TextView
		    android:id="@+id/dvsystemnametext"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingLeft="30dp"
		    android:text="@string/systemname"
		    android:textColor="@color/green" />

		<TextView
		    android:id="@+id/systemname"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingLeft="4dp"
		    android:text="背景音乐系统" />

	</LinearLayout>
	
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:orientation="horizontal">

		<TextView
		    android:id="@+id/dvfunctiontext"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingLeft="30dp"
		    android:text="@string/dvfunction"
		    android:textColor="@color/green" />

		<TextView
		    android:id="@+id/dvfunction"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingLeft="4dp"
		    android:text="开关客厅灯光" />

	</LinearLayout>
	
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:orientation="horizontal">

		<TextView
		    android:id="@+id/tvoperationtext"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingLeft="30dp"
		    android:text="@string/operation" />

		<TextView
		    android:id="@+id/tvoperation"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingLeft="4dp"
		    android:text="降央卓玛,5"
		    android:textColor="@color/yellow" />

	</LinearLayout>
	
</LinearLayout>
