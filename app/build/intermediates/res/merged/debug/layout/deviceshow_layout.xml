<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent">
	<ImageView android:id="@+id/imagedevice" style="68dp"
		android:layout_width="72dp" android:layout_height="72dp"
		android:padding="2dp" android:src="@drawable/device" />
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="64dp" android:orientation="vertical">
		<TextView android:id="@+id/dvdescription" android:singleLine="true"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/function" />
		<TextView android:id="@+id/dvidtype" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/control"
			android:singleLine="true" android:textColor="@color/yellow" />
		<TextView android:id="@+id/dvvalume" android:layout_width="wrap_content"
			android:singleLine="true" android:layout_height="wrap_content"
			android:text="@string/state" />
	</LinearLayout>

</LinearLayout>
